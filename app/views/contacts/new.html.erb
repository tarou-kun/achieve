<div class="container">
 <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
  <%= form_for(@contacts, url: confirm_contacts_path) do |f| %>
   <% if @contacts.errors.any? %>
    <div id="error_explanation"> 
     <!--バリデーションエラーの件数を表示します。-->
     <h2><%= @contacts.errors.count %>件のエラーがあります。</h2>
     <ul>
      <!--@contacts.errosは@contactsをバリデーションした際のバリデーションした際のエラー情報です。-->
      <!--full?messagesは複数のエラーメッセージを表します。-->
      <% @contacts.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
     </ul>
    </div>
   <% end %>
   
   <%= f.label :お名前 %>
   <%= f.text_field :name, class: 'form-control' %>
   <br>
   <%= f.label :メールアドレス %>
   <%= f.text_field :email, class: 'form-control' %>
   <br>
   <%= f.label :問い合わせ内容 %>
   <%= f.text_field :content, class: 'form-control' %>
   <br>
   <%= f.submit '問い合わせする', class: 'btn btn-primary btn-lg' %>
  <% end %>
 </div>
</div>