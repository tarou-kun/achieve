<div class="container">
 <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
  <h3>以下の内容で以下の内容で、送信する。</h3>

  <%= form_for(@contacts) do |f| %>
   <%= f.hidden_field :name %>
   <%= f.hidden_field :email %>
   <%= f.hidden_field :content %>
 
   <p>名前：<%= @contacts.name %></p>
   <p>メールアドレス：<%= @contacts.email %></p>
   <p>問い合わせ内容：<%= @contacts.content %></p>
   <%= f.submit "問い合わせする", class: 'btn btn-primary margin_bottom'%>
  <% end %>

  <%= form_for(@contacts, url: new_contact_path, method: 'get') do |f| %>
   <%= f.hidden_field :name %>
   <%= f.hidden_field :email %>
   <%= f.hidden_field :content %>
   <%= f.submit "もどる", name: 'back', class: 'btn btn-primary back_width' %>
  <% end %>
 </div>
</div>